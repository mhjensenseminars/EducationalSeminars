<%
pub_url = 'http://mhjensenseminars.github.io/EducationalSeminars/doc/pub'
published = ['cse', 'csebio', 'np', 'talent', 'NPretreatComputation', 'NPretreatEducation', 'cleancode',]
chapters = {
 'cse': 'Computing in science education',
